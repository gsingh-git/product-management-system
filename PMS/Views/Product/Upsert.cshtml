@model PMS.ViewModels.ProductPurchaseHistoryVM

<div class="container">
    <h1 class="well">Purchase Quantity - @Model.ProductSpecificationId</h1>
    <div class="col-lg-12 well">
        @using (Html.BeginForm("Upsert", "Product", method: FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ProductSpecificationId)
            @Html.HiddenFor(model => model.ProductId)

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr />

            <div class="form-row">

                <div class="form-group col-md-6">
                    <label>Purchased Quantity</label>
                    @Html.EditorFor(model => model.PurchaseQuantity, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group col-md-6">
                    <label>Price Per Unit</label>
                    @Html.EditorFor(model => model.PricePerUnit, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    <label>Date Of Purchase</label>
                    @Html.TextBoxFor(model => model.PurchaseDate, new { @class = "form-control datepicker" })
                </div>

                <div class="form-group col-md-6">
                    <label>Other</label>
                    @Html.TextAreaFor(model => model.Other, new { @class = "form-control", @row = 2 })


                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    Save
                </button>
                <a id="closbtn" class="btn btn-light" href="">Cancel</a>
            </div>
        }
    </div>
    <div class="col-lg-12">
        <span>todo: display list of purchase history</span>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script type="text/javascript">
    $(function () { // will trigger when the document is ready
        $('.datepicker').datepicker({ format: 'd/M/yyyy' }); //Initialise any date pickers
    });
</script>
